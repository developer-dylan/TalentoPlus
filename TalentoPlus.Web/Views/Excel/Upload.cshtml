@{
    ViewData["Title"] = "Importar Empleados";
}

<h2 class="fw-bold mb-4 fade-in">Importar Empleados desde Excel</h2>

<div class="card-soft fade-in">

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form asp-action="Upload" method="post" enctype="multipart/form-data" class="mt-3">

        <label class="form-label">Seleccionar Archivo Excel</label>
        <input type="file" name="file" class="form-control" required />

        <button class="btn btn-primary btn-soft mt-3">Subir Archivo</button>
    </form>

</div>