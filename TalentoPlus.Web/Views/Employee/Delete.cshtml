@model TalentoPlus.Data.Entities.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h2 class="fw-bold mb-4 text-danger fade-in">Delete Employee</h2>

<div class="alert alert-danger fade-in">
    <strong>Warning:</strong> Are you sure you want to delete this employee?
</div>

<div class="card-soft fade-in">

    <p><strong>Name:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Department:</strong> @Model.Department?.Name</p>

</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-4 fade-in">
    <input type="hidden" asp-for="Id" />

    <button class="btn btn-danger btn-soft">Delete</button>
    <a href="/Employee" class="btn btn-secondary btn-soft">Cancel</a>
</form>